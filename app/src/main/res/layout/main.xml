<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">



    <bit.facetracker.ui.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <bit.facetracker.ui.camera.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </bit.facetracker.ui.camera.CameraSourcePreview>

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <TextView
                android:text="13:12"
                android:id="@+id/time"
                android:gravity="left|center_vertical"
                android:textColor="#cccccc"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
                <TextView
                    android:text="公立 7月4日"
                    android:gravity="left|center_vertical"
                    android:id="@+id/day"
                    android:textColor="#cccccc"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <TextView
                    android:text="星期三"
                    android:gravity="left|center_vertical"
                    android:id="@+id/week"
                    android:textColor="#cccccc"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/weather"
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/sun"
                    android:layout_gravity="center_vertical"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="25-35℃"
                        android:gravity="left|center_vertical"
                        android:textColor="#f4bf20"
                        android:textSize="10sp"
                        android:id="@+id/temperature_range"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="35℃"
                        android:gravity="left|center_vertical"
                        android:textColor="#f4bf20"
                        android:textSize="10sp"
                        android:id="@+id/temperature"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="晴"
                        android:gravity="left|center_vertical"
                        android:textColor="#f4bf20"
                        android:textSize="10sp"
                        android:id="@+id/condition"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@mipmap/line_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/fan"/>


                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/user_background"
                    android:padding="40dp"
                    >

                    <bit.facetracker.ui.widget.CustomDraweeView
                        android:id="@+id/self"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/displayTextColor"
                    android:textSize="@dimen/textSize"
                    android:id="@+id/attractive"
                    android:text= ""
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/displayTextColor"
                    android:textSize="@dimen/textSize"
                    android:id="@+id/age"
                    android:text= ""
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            <TextView
                android:textColor="@color/displayTextColor"
                android:textSize="@dimen/textSize"
                android:gravity="center"
                android:id="@+id/star_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@mipmap/star_background"
                android:padding="25dp">

                <bit.facetracker.ui.widget.CustomDraweeView
                    android:id="@+id/star"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:roundAsCircle="true"
                    />
            </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>
